<div class = "main-contents">
<h3>スケジュール詳細</h3>
 
    <table class = "table table-bordered">
      <tr>
        <th>タイトル</th>
        <td><%= @user.tytle %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @user.start_at %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @user.end_at %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><% if user.all_day == true %>
            ○  
         <% else user.all_day == false %>
          
         <% end %></td>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.memo %></td>
       <tr> 
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", :users %></li>
      </ul>
    </div>
</div> 