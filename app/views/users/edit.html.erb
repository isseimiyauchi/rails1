<h3>ユーザー編集</h3>
 
    <%= form_for @user do |f| %>
        
        <table>
        <tr>
          <th><%= f.label :tytle ,"タイトル" %></th>
          <td><%= f.text_field :tytle %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_at ,"開始日" %></th>
          <td><%= f.date_field :start_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_at ,"終了日" %></th>
          <td><%= f.date_field :end_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :all_day ,"終日" %></th>
          <td><%= f.check_box :all_day %></td>
        </tr>

        <tr>
         <th><%= f.label :memo ,"スケジュールメモ" %></th>
         <td><%= f.text_area :memo %></td>
        </tr>
    </form>

        <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
          <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
        </ul>
      </div>
    <% end %>